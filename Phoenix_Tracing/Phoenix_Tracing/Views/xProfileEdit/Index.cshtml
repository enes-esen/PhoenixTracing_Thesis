<section class="home-section">
    <nav>
        <div class="sidebar-button">
            <i class='bx bx-menu sidebarBtn'></i>
            <span class="dashboard">PHOENIX TRACING</span>
        </div>

        <div class="profile-details">
            <!--<img src="images/profile.jpg" alt="">-->
            <i class='bx bxs-user'></i>
            <span class="admin_name" id="user_info">@Session["UserName"] @Session["UserSurname"]</span>
            <!--<i class='bx bx-chevron-down'></i>-->
        </div>
    </nav>

    @*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*@
    <div class="home-content">
        <div class="boxes">
            <div class="boxes2 box">
                <div class="title">Profil Ayarları</div>

                <details class="akerdion">

                    <summary> Eğer adres bilgileriniz yoksa lütfen önce buraya tıklayarak adres bilgilerinizi kaydediniz.  <i class='bx bxs-hand-left'></i> </summary>
                    <div class="details">
                        <form id="contact2" action="" method="post" class="container2" style="box-shadow:none;">
                            <h3> Adres Bilgisi Girin</h3>
                            <fieldset>
                                <p> Adres başlığı yazınız </p>
                                <input placeholder="Adres başlığı..." type="text" tabindex="1" id="address_name" required>
                            </fieldset>
                            <fieldset>
                                <p> Şehir yazınız </p>
                                <input placeholder="Şehir... " type="text" tabindex="2" id="address_city" required>
                            </fieldset>
                            <fieldset>
                                <p> Telefon numarası yazınız </p>
                                <input type="text"
                                       maxlength="11" minlenght="11"
                                       placeholder="Telefon numarası (0xxx xxx xxxx) "
                                       onkeypress=" return(event.charCode != 8 && event.charCode == 0 || (event.charCode>= 48 && event.charCode <= 57))"
                                       id="address_phone" />
                            </fieldset>
                            <fieldset>
                                <p> Adresinizi yazınız </p>
                                <textarea placeholder="Adres...." tabindex="4" id="address" required></textarea>
                            </fieldset>
                            <fieldset>
                                <button name="submit1" type="submit" id="profile_address_save" data-submit="...Sending">Kaydet</button>
                            </fieldset>
                        </form>
                    </div>
                </details>


                <div class="details">
                    <form id="contact2" action="" method="post" class="container2">

                        <div class="leftSideProfileEdit">
                            @Html.Action("GetUserList", "xProfileEdit")
                            <fieldset>
                                <button name="submit" type="submit" id="btnUserEdit" onclick="UserInformationEdit()" data-submit="...Sending">Bilgileri Güncelle</button>
                            </fieldset>
                        </div>

                        <div class="rightSideProfileEdit">
                            <fieldset>
                                <p> Adres seçiniz </p>
                                <select tabindex="5" id="test">
                                    <option value="">Adres seçiniz...</option>
                                    @Html.Action("GetUserAddressNames", "xProfileEdit")
                                </select>
                            </fieldset>

                            <fieldset>
                                <p>Adres Telefon Numarası</p>
                                <input id="adrPhone" type="text" tabindex="5">
                            </fieldset>
                            <fieldset>
                                <p>Şehir</p>
                                <input id="adrCity" type="text" tabindex="6">
                            </fieldset>
                            <fieldset>
                                <p> Adres </p>
                                <textarea id="adr" tabindex="7"></textarea>
                            </fieldset>

                            <fieldset>
                                <button name="submit" type="submit" id="btnAdrEdit" data-submit="...Sending">Adresi Güncelle</button>
                            </fieldset>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>